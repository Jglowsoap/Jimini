# Jimini AI Policy Gateway - Environment Configuration
# Copy to .env and customize for your deployment

# Core Configuration
JIMINI_API_KEY=your-secure-api-key-here
JIMINI_RULES_PATH=/app/policy_rules.yaml
JIMINI_SHADOW=true

# OpenAI Integration for ML-powered rules
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Database & Caching (if using Redis)
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

# Observability & Monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:14268/api/traces
OTEL_SERVICE_NAME=jimini-ai-policy
LOG_LEVEL=INFO
METRICS_ENABLED=true

# Audit & Security
AUDIT_LOG_PATH=/app/logs/audit.jsonl
AUDIT_RETENTION_DAYS=90
ENABLE_SIGNATURE_VERIFICATION=true

# Alerting & Webhooks
WEBHOOK_URL=https://your-webhook-endpoint.com/jimini
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ENABLE_ALERTS=true

# Performance Tuning
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# ML & Intelligence Features (Phases 6A-6D)
ENABLE_RISK_SCORING=true
ENABLE_POLICY_RECOMMENDATIONS=true
ENABLE_PREDICTIVE_INTELLIGENCE=true
ML_MODEL_CACHE_SIZE=100
THREAT_PREDICTION_LOOKBACK_DAYS=30
ANOMALY_DETECTION_SENSITIVITY=0.1

# Shadow Mode Overrides
SHADOW_OVERRIDE_ENDPOINTS=/v1/evaluate,/v1/intelligence/*
ENFORCE_CRITICAL_RULES=SECRETS-*,PCI-*,HIPAA-*

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=100

# Development Settings
DEBUG=false
RELOAD=false
ACCESS_LOG=true